<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CheckersActivity"
    android:id="@+id/relativeHome"
    android:background="@drawable/home_footer">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgLogo"
        android:src="@drawable/kingme_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Human vs Human"
        android:id="@+id/btn_HumanLocal"
        android:background="#ff87c0ff"
        android:textColor="#ffffffff"
        android:textSize="60px"
        android:layout_below="@+id/imgLogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="sendMessage"
        android:elegantTextHeight="true"
        android:layout_marginTop="30dp" />

    <Button
        style="@android:style/TextAppearance.Holo.Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Human vs Human (Remote)"
        android:id="@+id/btn_HumanRemote"
        android:background="#ff60c3ff"
        android:textColor="#ffffffff"
        android:textSize="60px"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="160dp"
        android:onClick="sendMessage" />

    <Button
        style="@android:style/TextAppearance.Holo.Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Human vs Computer"
        android:id="@+id/btn_HumanComputer"
       android:background="#ff34a4ff"
        android:textColor="#ffffffff"
        android:textSize="60px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="140dp"
        android:onClick="sendMessage" />

</RelativeLayout>
