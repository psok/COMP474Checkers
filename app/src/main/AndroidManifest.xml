<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.checkers.kingme.comp474checkers" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CheckersSystem"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_game"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".LocalMultiPlayer"
            android:label="@string/title_activity_local_multi_player" >
        </activity>
        <activity
            android:name=".RemoteMultiPlayer"
            android:label="@string/title_activity_remote_multi_player" >
        </activity>
    </application>

</manifest>
